<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:id="@+id/weight_root"
	style="@style/CardRow"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="0dp"
	android:layout_height="match_parent"
	android:layout_weight="1"
	android:orientation="horizontal"
	tools:showIn="@layout/fragment_game">

	<ImageView
		android:id="@+id/icon_weight"
		style="@style/Icon"
		android:src="@drawable/ic_weight"/>

	<LinearLayout
		style="@style/CardRowContent"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical"
		android:gravity="center_vertical"
		android:orientation="vertical"
		tools:background="#0f0">

		<TextView
			android:id="@+id/game_weight_message"
			style="@style/RatingSmall.Wide"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:maxLines="1"
			tools:background="#088"
			tools:text="Light"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:paddingLeft="@dimen/padding_extra"
			android:paddingRight="@dimen/padding_extra">

			<TextView
				android:id="@+id/game_weight_score"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:maxLines="1"
				android:textAppearance="@style/Text.Secondary.Small"
				android:textStyle="bold"
				android:visibility="gone"
				tools:text="1.23"
				tools:visibility="visible"/>

			<Space
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:minWidth="@dimen/padding_extra"/>

			<TextView
				android:id="@+id/game_weight_votes"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:maxLines="1"
				android:textAppearance="@style/Text.Secondary.Small"
				android:visibility="gone"
				tools:text="42,000 votes"
				tools:visibility="visible"/>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>

				